generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model User {
  id          String   @id @default(uuid())
  email       String   @unique
  emailVerified DateTime?
  name        String?
  avatar      String?
  image       String?
  bio         String?
  location    String?
  preferences Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  accounts            Account[]
  sessions            Session[]
  userBooks           UserBook[]
  reviews             Review[]
  comments            Comment[]
  readingLists        ReadingList[]
  followers           Follow[]             @relation("UserFollowers")
  following           Follow[]             @relation("UserFollowing")
  quotes              Quote[]
  bookmarks           Bookmark[]
  bookClubs           BookClub[]           @relation("BookClubOwner")
  bookClubMembers     BookClubMember[]
  bookClubDiscussions BookClubDiscussion[] @relation("BookClubDiscussionCreator")

  @@map("users")
}

model Book {
  id            String   @id @default(uuid())
  title         String
  author        String
  isbn          String?  @unique
  cover         String?
  genre         String?
  publishedYear Int?
  publisher     String?
  language      String?
  description   String?  @db.Text
  pages         Int?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  userBooks           UserBook[]
  reviews             Review[]
  listItems           ReadingListItem[]
  quotes              Quote[]
  bookmarks           Bookmark[]
  bookClubDiscussions BookClubDiscussion[]

  @@index([author])
  @@index([genre])
  @@index([publishedYear])
  @@map("books")
}

model UserBook {
  id          String    @id @default(uuid())
  userId      String
  bookId      String
  status      String?
  rating      Int?
  review      String?   @db.Text
  readDate    DateTime?
  currentPage Int?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  book Book @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@unique([userId, bookId])
  @@index([userId, status])
  @@index([bookId])
  @@map("user_books")
}

model Review {
  id        String   @id @default(uuid())
  userId    String
  bookId    String
  content   String   @db.Text
  rating    Int?
  likes     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  book     Book      @relation(fields: [bookId], references: [id], onDelete: Cascade)
  comments Comment[]

  @@unique([userId, bookId])
  @@index([userId])
  @@index([bookId])
  @@index([bookId, createdAt(sort: Desc)])
  @@map("reviews")
}

model Comment {
  id        String   @id @default(uuid())
  userId    String
  reviewId  String
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  review Review @relation(fields: [reviewId], references: [id], onDelete: Cascade)

  @@index([reviewId])
  @@map("comments")
}

model ReadingList {
  id          String   @id @default(uuid())
  userId      String
  name        String
  description String?  @db.Text
  isPublic    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user             User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  readingListItems ReadingListItem[]

  @@index([userId])
  @@index([userId, isPublic])
  @@map("reading_lists")
}

model ReadingListItem {
  id        String   @id @default(uuid())
  listId    String
  bookId    String
  order     Int      @default(0)
  createdAt DateTime @default(now())

  list ReadingList @relation(fields: [listId], references: [id], onDelete: Cascade)
  book Book        @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@unique([listId, bookId])
  @@map("reading_list_items")
}

model Follow {
  id          String   @id @default(uuid())
  followerId  String
  followingId String
  createdAt   DateTime @default(now())

  follower  User @relation("UserFollowers", fields: [followerId], references: [id], onDelete: Cascade)
  following User @relation("UserFollowing", fields: [followingId], references: [id], onDelete: Cascade)

  @@unique([followerId, followingId])
  @@map("follows")
}

model Quote {
  id        String   @id @default(uuid())
  userId    String
  bookId    String
  content   String   @db.Text
  page      Int?
  chapter   String?
  isPublic  Boolean  @default(false)
  likes     Int      @default(0)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  book Book @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([bookId])
  @@index([bookId, isPublic])
  @@map("quotes")
}

model Bookmark {
  id        String   @id @default(uuid())
  userId    String
  bookId    String
  page      Int?
  note      String?  @db.Text
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  book Book @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, bookId])
  @@map("bookmarks")
}

model BookClub {
  id             String   @id @default(uuid())
  name           String
  description    String?  @db.Text
  ownerId        String
  isPublic       Boolean  @default(false)
  maxMembers     Int?
  currentMembers Int      @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  owner       User                 @relation("BookClubOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  members     BookClubMember[]
  discussions BookClubDiscussion[]

  @@index([ownerId])
  @@index([isPublic])
  @@map("book_clubs")
}

model BookClubMember {
  id       String   @id @default(uuid())
  clubId   String
  userId   String
  role     String   @default("MEMBER") // "OWNER", "MODERATOR", "MEMBER"
  joinedAt DateTime @default(now())

  club BookClub @relation(fields: [clubId], references: [id], onDelete: Cascade)
  user User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([clubId, userId])
  @@map("book_club_members")
}

model BookClubDiscussion {
  id            String    @id @default(uuid())
  clubId        String
  bookId        String?
  title         String
  content       String?   @db.Text
  scheduledDate DateTime?
  creatorId     String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  club    BookClub @relation(fields: [clubId], references: [id], onDelete: Cascade)
  book    Book?    @relation(fields: [bookId], references: [id], onDelete: SetNull)
  creator User     @relation("BookClubDiscussionCreator", fields: [creatorId], references: [id], onDelete: Cascade)

  @@index([clubId])
  @@index([clubId, scheduledDate])
  @@map("book_club_discussions")
}


